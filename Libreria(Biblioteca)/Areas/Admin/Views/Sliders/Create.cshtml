@model Libreria.Models.Slider

@{
    ViewData["Title"] = "Crear Slider";
}

<br />
<br />
<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="card mx-auto my-5 p-4" style="max-width: 800px; background: linear-gradient(to bottom, #fdfdfd, #ffcccc);">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger mb-3"></div>

            <h3 class="card-title text-center mb-4">Crear Silder</h3>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del Slider" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Estado" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Estado" style="width: 25px; height: 25px; " />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="UrlImagen" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>


            <partial name="_VistaCrearVolver" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


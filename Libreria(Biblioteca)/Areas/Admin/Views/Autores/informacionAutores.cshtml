@model IEnumerable<Libreria.Models.Autor>

@{
    ViewData["Title"] = "Información Autores";
}

<h1 class="text-center fw-bold">Información de Autores</h1>
<br />
<h2 class="text-bg-dark">Conoce un poco más sobre, los autores más destacados a lo largo de la historia</h2>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.UrlImagen" class="card-img-top mx-auto d-block" style="width: 300px; height: 200px; object-fit: cover;"/>
            </div>
            <div class="card-body">
                <h5 class="card-title text-center fw-bold">@Html.Raw(item.NombreAutor)</h5>
                <p class="card-text">@Html.Raw(item.Biografia)</p>
            </div>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-area="Cliente" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Volver Atrás
        </a>
    </div>
</div>

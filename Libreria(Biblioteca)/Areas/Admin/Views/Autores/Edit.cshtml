@model Libreria.Models.Autor

@{
    ViewData["Title"] = "Editar Autor";
}

<br />
<br />
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ID" />
    <div class="card mx-auto my-4 p-3" style="max-width: 900px; background: linear-gradient(to bottom, #fdfdfd, #ffcccc);">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger mb-3"></div>

            <h3 class="card-title text-center mb-4">Editar Autor</h3>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="NombreAutor" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreAutor" class="form-control" placeholder="Nombre del Autor" />
                    <span asp-validation-for="NombreAutor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Biografia" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Biografia" class="form-control" style="height: 200px" placeholder="Biografia"></textarea>
                    <span asp-validation-for="Biografia" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="UrlImagen" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <img src="@Model.UrlImagen" width="350" style="border-radius:5px; border:1px solid #bbb9b9"  />
            </div>
            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success form-control">Editar Autor</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-outline-dark form-control">Volver Atrás</a>
                </div>
            </div>

            
        </div>

        
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.6.0/tinymce.min.js" integrity="sha512-/4EpSbZW47rO/cUIb0AMRs/xWwE8pyOLf8eiDWQ6sQash5RP1Cl8Zi2aqa4QEufjeqnzTK8CLZWX7J5ZjLcc1Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}



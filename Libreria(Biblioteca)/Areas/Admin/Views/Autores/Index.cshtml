@{
    ViewData["Title"] = "Lista de Autores";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Autores</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear Autor</a>
        </div>
    </div>


<br />
<br /> 

<table id="tblAutores" class="table table-striped-columns table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Autor</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>

</table>

</div>

@section Scripts {
        <script src="~/js/autor.js"></script>
}
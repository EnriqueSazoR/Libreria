@model Libreria.Models.ViewModels.LibroVM

@{
    ViewData["Title"] = "Editar Libro";
}

<br />
<br />

<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Libro.ID"/>
    <div class="card mx-auto my-5 p-4" style="max-width: 800px; background: linear-gradient(to bottom, #fdfdfd, #ffcccc);">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger mb-3"></div>

            <h3 class="card-title text-center mb-4">Editar Libro</h3>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Libro.NombreLibro" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Libro.NombreLibro" class="form-control" placeholder="Libro" />
                    <span asp-validation-for="Libro.NombreLibro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Libro.Sinopsis" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Libro.Sinopsis" class="form-control" style="height: 200px" placeholder="Sinopsis"></textarea>
                    <span asp-validation-for="Libro.Sinopsis" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Libro.UrlImagen" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="Libro.UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Libro.NumeroPaginas" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Libro.NumeroPaginas" class="form-control" placeholder="Libro" />
                    <span asp-validation-for="Libro.NumeroPaginas" class="text-danger"></span>
                </div>
            </div>

            <!--DropDown Categorías-->
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label for="Categoria" class="col-form-label font-weight-bold">Categoría</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Libro.IdCategoria, Model.ListaCategorias,
                             "--Por favor seleccione categoría--", new { @class = "form-control" })
                    <span asp-validation-for="Libro.IdCategoria" class="text-danger"></span>
                </div>
            </div>

            <!--DropDown Autores-->
            <div class="form-gruop row mb-3">
                <div class="col-4">
                    <label for="Autor" class="col-form-label font-weight-bold">Autor</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Libro.IdAutor, Model.ListaAutores,
                             "--Por favor seleccione autor--", new { @class = "form-control" })
                    <span asp-validation-for="Libro.IdAutor" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <img src="@Model.Libro.UrlImagen" width="250" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>

            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success form-control">Editar Libro</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-outline-dark form-control">Volver Atrás</a>
                </div>
            </div>
           

        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.6.0/tinymce.min.js" integrity="sha512-/4EpSbZW47rO/cUIb0AMRs/xWwE8pyOLf8eiDWQ6sQash5RP1Cl8Zi2aqa4QEufjeqnzTK8CLZWX7J5ZjLcc1Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}
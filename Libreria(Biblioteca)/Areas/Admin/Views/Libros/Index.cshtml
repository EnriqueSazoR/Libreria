@{
    ViewData["Title"] = "Lista de Libros";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Libros</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear Libro</a>
        </div>
    </div>


    <br />
    <br />

    <table id="tblLibros" class="table table-striped-columns table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libro</th>
                <th>Imagen</th>
                <th>Categoria</th>
                <th>Autor</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>

</div>

@section Scripts {
    <script src="~/js/libro.js"></script>
}
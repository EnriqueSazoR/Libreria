@model Libreria.Models.SobreNosotro

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sobre Nosotros</title>
</head>
<body>
    <div class="container py-5">
        <!-- Título -->
        <div class="text-center mb-4">
            <h1 class="display-4">Sobre Nosotros</h1>
            <p class="text-muted">Conoce más acerca de nuestra misión, visión y valores.</p>
        </div>

        <!-- Contenido -->
        <div class="row justify-content-center">
            <!-- Misión -->
            <div class="col-md-8 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-primary">Misión</h2>
                        <p class="card-text">@Html.Raw(Model.Mision)</p>
                    </div>
                </div>
            </div>

            <!-- Visión -->
            <div class="col-md-8 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-primary">Visión</h2>
                        <p class="card-text">@Html.Raw(Model.Vision)</p>
                    </div>
                </div>
            </div>

            <!-- Información -->
            <div class="col-md-8 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-primary">¿Quiénes Somos?</h2>
                        <p class="card-text">@Html.Raw(Model.Informacion)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botón Volver -->
        <div class="text-center mt-5">
            <a asp-area="Cliente" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-lg">
                <i class="fas fa-arrow-left me-2"></i> Volver Atrás
            </a>
        </div>

        <!-- Agrega Font Awesome en tu proyecto -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    </div>

</body>
</html>

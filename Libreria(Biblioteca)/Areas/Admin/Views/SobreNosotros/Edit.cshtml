@model Libreria.Models.SobreNosotro

@{
    ViewData["Title"] = "Editar información";
}

<br />
<br />

<form method="POST" asp-action="Edit">
    <div class="card mx-auto my-5 p-4" style="max-width: 1200px; background: linear-gradient(to bottom, #fdfdfd, #ffcccc);">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger mb-3"></div>

            <h3 class="card-title text-center mb-4">Editar Información Biblioteca</h3>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Vision" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Vision" class="form-control" style="height: 200px" placeholder="Visión"></textarea>
                    <span asp-validation-for="Vision" class="text-bg-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Mision" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Mision" class="form-control" style="height: 200px" placeholder="Misión"></textarea>
                    <span asp-validation-for="Mision" class="text-bg-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Informacion" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Informacion" class="form-control" style="height: 200px" placeholder="Información de Biblioteca"></textarea>
                    <span asp-validation-for="Informacion" class="text-bg-danger"></span>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success form-control">Editar Info.</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-outline-dark form-control">Volver Atrás</a>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <partial name ="_ValidationScriptsPartial"/>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.6.0/tinymce.min.js" integrity="sha512-/4EpSbZW47rO/cUIb0AMRs/xWwE8pyOLf8eiDWQ6sQash5RP1Cl8Zi2aqa4QEufjeqnzTK8CLZWX7J5ZjLcc1Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}


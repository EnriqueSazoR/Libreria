@model Libreria.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<br />
<br />

<form method="POST" asp-action="Edit">
    <div class="card mx-auto my-5 p-4" style="max-width: 600px; background: linear-gradient(to bottom, #fdfdfd, #ffcccc);">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger mb-3"></div>

            <h3 class="card-title text-center mb-4">Editar Categoría</h3>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="NombreCategoria" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreCategoria" class="form-control" placeholder="Ingresa la Categoría" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Orden" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Orden de visualización" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success form-control">Editar Categoría</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-outline-dark form-control">Volver Atrás</a>
                </div>
            </div>
        </div>
    </div>

</form>
